{
  "name": "root",
  "private": true,
  "scripts": {
    "audit-all": "lerna run audit-moderate",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run tsc",
    "check-all": "concurrently \"npm:format-check\" \"npm:lint\" \"npm:test\" \"npm:build -- -- --noEmit\"",
    "format": "prettier --write packages/**/*.ts",
    "format-check": "prettier --check packages/**/*.ts",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint --fix packages/**/*.ts",
    "new-package": "scripts/create-package",
    "test": "jest --testTimeout 10000  --runInBand --detectOpenHandles "
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.15.9",
    "@types/signale": "^1.2.1",
    "@typescript-eslint/parser": "^1.9.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jest-dom": "^2.0.1",
    "flow-bin": "^0.115.0",
    "jest": "^25.1.0",
    "jest-circus": "^24.7.1",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@actions/exec": "^1.0.3"
  }
}
