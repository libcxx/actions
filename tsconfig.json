{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "strict": true,
        "baseUrl": "./",
        "outDir": "./lib/",
        "rootDir": "./src"
    },
    "include": ["./src/*.ts"],
    "exclude": [
        "node_modules",
        "__test__/**",
        "BACK_actions",
        "BAK_publish",
        "**/dist/",
        "lib/"
    ]
}
