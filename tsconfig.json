{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6"],
        "strict": true,
        "baseUrl": "./packages/",
        "paths": {
            "@libcxx/*": ["./*/src/"]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "actions/**"
    ]
}
